<!-- /templates/customers/register.liquid -->
{% comment %} <div class="register-container">
    <h1>Create Account</h1>
    <form method="post" action="/account">
        <input type="text" name="customer[first_name]" placeholder="First Name" required>
        <input type="text" name="customer[last_name]" placeholder="Last Name" required>
        <input type="email" name="customer[email]" placeholder="Email" required>
        <input type="password" name="customer[password]" placeholder="Password" required>
        <button type="submit">Create Account</button>
    </form>
    <a href="/account/login">Already have an account? Log in</a>
    {% if form.errors %}
        <ul>
          {% for error in form.errors %}
            <li>{{ error }}</li>
          {% endfor %}
        </ul>
      {% endif %}
</div> {% endcomment %}
<div class="mainregister-container">
  <div class="register-container">
    {% form 'create_customer' %}
        {{ form.errors | default_errors }}
      
        <div class="first-name">
          <label for="first-name">First name</label>
          <input type="text" name="customer[first_name]">
        </div>
      
        <div class="last-name">
          <label for="last-name">Last name</label>
          <input type="text" name="customer[last_name]">
        </div>
      
        <div class="email">
          <label for="email">Email</label>
          <input type="email" name="customer[email]">
        </div>
      
        <div class="password">
          <label for="password">Password</label>
          <input type="password" name="customer[password]">
        </div>
      
        <div class="submit">
          <input type="submit" value="Create" class="btn-primary">
        </div>
      {% endform %}
      <div style="display:flex; justify-content:center; align-items:center; gap:5px">
        <p style="font-size:1.5rem;">Already registered? </p>
        <a href="/account/login" style="margin-bottom:10px;" >Log in</a>
      </div>
    {% comment %} <h1>Create Account</h1>
    {{ form | form_tag }}
        <input type="text" name="customer[first_name]" placeholder="First Name" required>
        <input type="text" name="customer[last_name]" placeholder="Last Name" required>
        <input type="email" name="customer[email]" placeholder="Email" required>
        <input type="password" name="customer[password]" placeholder="Password" required>
        <button type="submit">Create Account</button>
    </form>
    <a href="/account/login">Already have an account? Log in</a>
    {% if form.errors %}
        <ul>
          {% for error in form.errors %}
            <li>{{ error }}</li>
          {% endfor %}
        </ul>
    {% endif %} {% endcomment %}
  </div>  
</div>

                                                                                                                                                                                                                                  
<style>
    .mainregister-container{
      display: flex;
      justify-content: center;
      flex-direction:column;
      align-items: center;
      padding:1rem;
      margin-top:1rem
    }
    .register-container {
        background-color: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
    }
    .register-container h1 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        text-align: center;
    }
    .register-container input {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .register-container button {
        width: 100%;
        padding: 0.75rem;
        background-color: #333;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    .register-container button:hover {
        background-color: #555;
    }
    .register-container a {
        color: #007BFF;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 1rem;
    }
</style>